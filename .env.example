# Screeps API Configuration
# Copy this file to .env and fill in your values

# Authentication - use either token OR username/password
SCREEPS_TOKEN=your-api-token-here
# SCREEPS_USERNAME=your-username
# SCREEPS_PASSWORD=your-password

# Server Configuration
SCREEPS_HOST=screeps.com
SCREEPS_SECURE=true
SCREEPS_SHARD=shard0

# For Private Servers
# SCREEPS_HOST=your-private-server.com:21025
# SCREEPS_SECURE=false

# For PTR (Public Test Realm)
# SCREEPS_HOST=screeps.com/ptr
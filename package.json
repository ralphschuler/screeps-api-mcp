{
  "name": "screeps-api-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for Screeps game API access",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "npm run build && node --test tests/*.test.js",
    "test:watch": "npm run build && node --test --watch tests/*.test.js",
    "test:coverage": "npm run build && node --test --experimental-test-coverage tests/*.test.js",
    "lint": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint src/**/*.ts --fix",
    "format": "npx prettier --write src/**/*.ts",
    "format:check": "npx prettier --check src/**/*.ts",
    "setup:claude": "node scripts/setup-claude.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "screeps",
    "mcp",
    "model-context-protocol",
    "api",
    "game"
  ],
  "author": "Ralph Schuler",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^14.0.1",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "bin": {
    "screeps-api-mcp": "./dist/index.js"
  }
}
